<%#= @errors.inspect %>
<% if @errors %>
  <div id="error" class="col-md-12 text-center">
    <h3>Por favor, revise o relatório</h3>

    <% @errors.each do |k, msg| %>
      <b class="col-md-12"><%= msg[0] %></b>
    <% end %>
  </div>
<% end %>

<div class="col-md-12">
  <div class="col-md-2 col-sm-2 col-xs-2"><h4>Comprador</h4></div>
  <div class="col-md-2 col-sm-2 hidden-xs"><h4>Descrição</h4></div>
  <div class="col-md-2 col-sm-2 col-xs-2 text-center"><h4>Quantidade</h4></div>
  <div class="col-md-2 col-sm-2 col-xs-2"><h4>Endereço</h4></div>
  <div class="col-md-2 col-sm-2 col-xs-2"><h4>Fornecedor</h4></div>
  <div class="col-md-1 col-sm-1 col-xs-1 text-center"><h4>Unidade</h4></div>
  <div class="col-md-1 col-sm-1 col-xs-1 text-center"><h4>Total</h4></div>
</div>

<% @salles.each do |salle| %>
  <div class="col-md-12">
    <div class="col-md-2 col-sm-2 col-xs-2 ">
      <%= salle.purchaser %>
    </div>

    <div class="col-md-2 col-sm-2 hidden-xs ">
      <%= salle.description %>
    </div>

    <div class="col-md-2 col-sm-2 col-xs-2 text-center">
      <%= salle.quantity %>
    </div>

    <div class="col-md-2 col-sm-2 col-xs-2 ">
      <%= salle.address %>
    </div>

    <div class="col-md-2 col-sm-2 col-xs-2 ">
      <%= salle.provider %>
    </div>

    <div class="col-md-1 col-sm-1 col-xs-1 text-center">
      <%= salle.unit_price %>
    </div>

    <div class="col-md-1 col-sm-1 col-xs-1 text-center">
      <%= salle.total_price %>
    </div>
  </div>
<% end %>

<div class="col-md-12 text-right">
  <div class="col-md-6">
    <h4>Valor Total</h4>
  </div>
  <div class="col-md-6">
    <h4>
      <%= @salles.inject(0) {|sum, value| sum.to_f + value[:total_price].to_f} %>
    </h4>
  </div>
</div>